<% include ./partials/header %>

   

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Make new camp!</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap:wrap;">

        <% campgrounds.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image%>" alt="">
                <div class="caption">
                    <h2>
                        <%= camp.name %>
                    </h2>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp.id%>" class="btn btn-primary">More info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>
</div>



<% include ./partials/footer %>