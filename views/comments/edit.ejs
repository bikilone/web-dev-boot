<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit comment</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= data.campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=data.comment.text%>" name="comment[text]">
                </div>
                <div class="from-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back!</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>